{
  "manifest_version": 3,

  "name": "Lattice Labs",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "version": "0.0.1",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"],
          "css": ["lights.css"]
      }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["santa_hat_smaller.png"],
      "matches": ["<all_urls>"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "cookies",
    "<all_urls>"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
